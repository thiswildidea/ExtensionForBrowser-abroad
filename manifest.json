{
  "manifest_version": 3,
  "name": "EsriMap Gallery",
  "version": "1.0.1",
  "description": "a browser extension for visualizing Esri Map onlinine using ArcGIS JavaScript API",
  "permissions": [
    "storage",
    "geolocation"
  ],
  "host_permissions": [
    "https://services.arcgisonline.com/*",
    "https://*.arcgis.com/*",
    "https://tiles.arcgis.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Earthquake Map",
    "default_icon":{
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons":{
    "128":"icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://services.arcgisonline.com;"
  },
  "web_accessible_resources": [
  {
    "resources": [
      "assets/*",
      "**/*"
    ],
    "matches": ["<all_urls>"]
  }
  ]
}

